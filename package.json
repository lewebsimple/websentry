{
  "name": "websentry",
  "version": "0.1.0",
  "description": "WebSentry is a declarative web crawling and extraction framework.",
  "homepage": "https://github.com/lewebsimple/websentry#readme",
  "bugs": {
    "url": "https://github.com/lewebsimple/websentry/issues"
  },
  "license": "AGPL-3.0-only",
  "author": "Pascal Martineau <pascal@lewebsimple.ca>",
  "repository": {
    "type": "git",
    "url": "https://github.com/lewebsimple/websentry.git"
  },
  "type": "module",
  "main": "./dist/core/index.js",
  "types": "./dist/core/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rolldown --config ./rolldown.config.ts && tsc",
    "format": "oxfmt .",
    "lint": "oxlint . --fix",
    "prepare": "husky",
    "release": "pnpm lint && pnpm build && changelogen --release --push && pnpm publish"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "changelogen": "^0.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "rolldown": "1.0.0-rc.5",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "oxlint --fix",
      "oxfmt --no-error-on-unmatched-pattern"
    ]
  },
  "packageManager": "pnpm@10.30.1",
  "changelog": {
    "noAuthors": true,
    "types": {
      "chore": false
    }
  }
}
